<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTotalWeight"
        android:layout_width="140sp"
        android:layout_height="70sp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName"
        tools:text="0" />

    <ToggleButton
        android:id="@+id/tbUnits"
        android:layout_width="140sp"
        android:layout_height="70sp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:text="@string/lb_unit"
        android:textOff="@string/lb_unit"
        android:textOn="@string/kg_unit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalWeight" />

    <TextView
        android:id="@+id/tvSmall"
        android:layout_width="85sp"
        android:layout_height="80sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMedium"
        tools:text="0" />

    <TextView
        android:id="@+id/tvMedium"
        android:layout_width="85sp"
        android:layout_height="80sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBig"
        tools:text="0" />

    <TextView
        android:id="@+id/tvBig"
        android:layout_width="85sp"
        android:layout_height="80sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbUnits"
        tools:text="0" />

    <TextView
        android:id="@+id/tvSmallest"
        android:layout_width="85sp"
        android:layout_height="80sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSmall"
        tools:text="0" />

    <Button
        android:id="@+id/bSmall"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/small_plate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/tvSmall"
        app:layout_constraintTop_toBottomOf="@+id/bMedium" />

    <Button
        android:id="@+id/bBig"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/big_plate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/tvBig"
        app:layout_constraintTop_toBottomOf="@+id/tbUnits" />

    <Button
        android:id="@+id/bSmallest"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/smallest_plate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/tvSmallest"
        app:layout_constraintTop_toBottomOf="@+id/bSmall" />

    <Button
        android:id="@+id/bMedium"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/med_plate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/tvMedium"
        app:layout_constraintTop_toBottomOf="@+id/bBig" />

</androidx.constraintlayout.widget.ConstraintLayout>